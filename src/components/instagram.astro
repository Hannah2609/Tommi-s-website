---
import "../CSS/style.css";
---

<section class="Instagram">
    <h1 class="white">#tommis</h1>
    <a href="https://www.instagram.com/tommisburgerjointdk/" target="_blank">
        <h2 class="white">@tommisburgerjointdk</h2></a>
<div class="billede_grid">
<img src="/img/instagram1pin.webp" alt="Instagram 1">
<img src="/img/instagram2pin.webp" alt="Instagram 2">
<img src="/img/instagram3pin.webp" alt="Instagram 3">
<img src="/img/instagram4pin.webp" alt="Instagram 4">
<img src="/img/instagram5pin.webp" alt="Instagram 5">
<img src="/img/instagram6pin.webp" alt="Instagram 6">
</div>
</section>
<style>
      @media(max-width:800px) {
        .billede_grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-inline: 15%;
    gap: 1.5em;
     margin-top: 2em;
   }

 }
  @media(min-width:800px) {
   .billede_grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin-inline: 10%;
    gap: 2em;
     margin-top: 2em;

   }

   img{
    width: 300px;
 

   }
   .Instagram{
align-items: center;
   }

}
@media(min-width:1200px) {
   .billede_grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin-inline: 20%;
    gap: 2em;
    margin-top: 2em;

   }
}
a{
    text-decoration: none;
}
h2:hover {
  color: var(--red);
}
</style>