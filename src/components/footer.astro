<style>
  @media (max-width: 450px) {
    .Footer {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1em;
      margin-left: 1em;
    }
    .footer-column {
      margin-top: 2em;
      margin-bottom: 1em;
    }
  
  }
  @media (min-width: 450px) {
    .Footer {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1em;
       margin-left: 1em;

    }
    .footer-column {
      margin-top: 2em;
      margin-bottom: 1em;
    }
   
  }

  @media (min-width: 900px) {
    .Footer {
      display: flex;
      flex-direction: row;
      justify-content: space-between;

    }
    
  
  }
  .logo {
      max-width: 150px;
    }

  .bg {
    opacity: 0.4;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
  }
  footer {
    font-family: "itc-american-typewriter", serif;
    color: white;
    font-size: 120%;
    background-color: black;
    background-image: url("/img/footerbg.webp");
    background-size: cover;
    background-position: center;
    padding: 5%;
    position: relative;
    overflow: hidden;
    border-top: solid 1px rgb(97, 97, 97);
 
  }

  a {
    font-family: "itc-american-typewriter", serif;
    font-style: normal;
    color: white;
  }

  h1 {
    font-weight: 700;
    font-size: 20px;
  font-style: normal;
    margin-bottom: 1em;
  }

  ul {
    list-style: none;
    margin-left: 0;
    padding-left: 0;
  }
  .socials {
    display: flex;
    gap: 1em;
    margin-bottom: 2em;
  }
  p {
    margin-bottom: 0.5em;
  }
  
</style>
