---
import "../CSS/style.css";
import "../CSS/animation.css";
import Knap from "../components/knap.astro";
---

<div class="hero">
  <video id="background-video" autoplay loop muted>
    <source src="/img/test2.mp4" type="video/mp4" />
  </video>
<div class="text-overlay">
  <h1 class="white"><slot /></h1>
  <div class="knapper">
  <Knap size="lille" style="filled">Order now</Knap>
  <Knap size="lille" style="borderwhite">See menu</Knap>
</div>
  <img 
    class="fade-out-down"
    src="../svg/arrow-down.svg"
    alt="Arrow scroll down"
  />
</div>
</div>

<style>
  h1 {
    animation: fade-in-up 0.5s;
    margin-top: 30vh;
  }
  .text-overlay {
    height: 86vh;
    text-align: center;

  }
  img {
   margin-top: 4em;
  }
  @media(max-width:800px) {
h1 {
  margin-top: 35vh;
}
  .knapper {
    display: flex;
    flex-direction: column;
    gap: 1em;
    margin-top: 2em;
    justify-content: center;
  }
 }
  @media(min-width:800px) {

  .knapper {
    display: flex;
    gap: 2em;
    margin-top: 2em;
    justify-content: center;
  }
 }
  #background-video {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: -2;
  }
  @media (max-width: 500px) {
    h1 {
      font-size: 50px;
    }
  }
  @media (min-width: 500px) {
    h1 {
      font-size: 70px;
    }
  }
  @media (min-width: 700px) {
    h1 {
      font-size: 100px;
    }
  }
  @media (min-width: 1000px) {
    h1 {
      font-size: 120px;
    }
  }

</style>
