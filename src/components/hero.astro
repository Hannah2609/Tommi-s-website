---
import "../CSS/style.css";
---

<div class="hero">
  <h1><slot /></h1>
  <img
    class="fade-out-down"
    src="../svg/arrow-down.svg"
    alt="Arrow scroll down"
  />
</div>

<style>
  div {
    height: 100vh;
    width: 100%;
    position: relative ;
  }
  h1 {
    text-align: center;
    vertical-align: middle;
    line-height: 80vh;
    font-size: 50px;
    animation: fade-in-up 0.5s;
  }

  .hero {
    background-image: url("/img/landingbg.jpg");
    background-size: cover;
  }
  .fade-out-down {
    animation: fade-out-down 2s ease infinite;
  }

  img {
    border: none;
    height: 50px;
    position: absolute;
    left: 50%;
    bottom: 10%;
  }
</style>
