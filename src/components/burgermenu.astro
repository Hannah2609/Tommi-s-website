---
import "../CSS/style.css";
---


<button class="burger-menu">
    <img src="/svg/burgermenu.svg" alt="burgermeu">
     <img src="/svg/burgerkryds.svg" alt="burgermeu">
  </button>
  
  <div class="menu-container">
    <ul class="menu-items">
          <li class="link"><a href="/">Home</a></li>
        <li class="link"><a href="/menu/">Menu</a></li>
        <li class="link"><a href="/#2">Our joint's</a></li>
        <li class="link"><a href="/story/">Our story</a></li>
        <li class="link"><a href="/">Order now</a></li>
    </ul>
  </div>


  <script>
    const burgerMenu = document.querySelector('.burger-menu');
const menuContainer = document.querySelector('.menu-container');
const menuLink = document.querySelector('.link');

 burgerMenu.addEventListener('click', () => {
    console.log("BURGER MENU");
    burgerMenu.classList.toggle('active');
    menuContainer.classList.toggle('active');
});

menuLink.addEventListener('click', () => {
    menuContainer.classList.remove('active');
    burgerMenu.classList.remove('active');
});
  </script>
  
<style>
   button {
    border: none;

   } 

    .burger-menu {
  position: absolute;
  top: 4%;
  right: 6%;
  background-color: transparent;
  
  cursor: pointer;
  z-index: 100;
  display: grid;

}
.burger-menu img:nth-of-type(1) {
     grid-area: 1/1;
}
.burger-menu img:nth-of-type(2) {
    opacity: 0;
     grid-area: 1/1;
}



.menu-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 0;
  overflow: hidden;
  z-index: 99;
}

.menu-items {
  list-style: none;
}


.menu-items li a {
  display: block;
  font-size: 25px;
  font-family: "American typewriter";
  font-weight: 500;
  text-decoration: none;
  color: white;
  text-align: center;
  margin: 2em;
  ;
}



.burger-menu.active img:nth-of-type(1) {
  opacity: 0;
}
.burger-menu.active img:nth-of-type(2) {
  opacity: 100;
}


.menu-container.active {
  width: 100vw;
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  align-items: center;
  justify-content: center;
  
}

.menu-container.active .menu-items {
  animation: menu-appear 0.3s ease;
}

@keyframes menu-appear {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@media(min-width:1000px){
    .burger-menu{
        display: none;
    }
}

li a:hover{
  color: var(--red);
}
</style>