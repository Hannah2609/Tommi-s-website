---
const { overskrift, pris, single, beskrivelse, billede } = Astro.props;
---

<card>
  <section class="menu-column">
    <div class="tekstboks">
      <div>
        <h3>
          {overskrift}
          <span>{pris}</span>
        </h3>
        <p class="tilbehor">+ Fries & Soda</p>
      </div>
      <p>{beskrivelse}<br class="mobile" /></p>
      <p class="single">{single}</p>
    </div>
    <img src={"/img/" + billede} alt="Picture of the offer" />
  </section>
</card>

<style>
  /* Mobile view */
  @media (max-width: 800px) {
    h3 {
      margin-top: 10px;
      margin-left: 13px;
      font-size: 12px;
      font-weight: 600;
      margin-right: 10px;
    }
    p {
      margin-top: 4px;
      margin-left: 13px;
      font-size: 8px;
      line-height: 2px;
    }
    .menu-column {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
      margin-left: 35px;
      margin-right: 35px;
      background-color: var(--paper);
      height: 105px;
      border-radius: 2px;
      max-width: 350px;
    }
    .tilbehor {
      margin-top: 1px;
      margin-left: 18px;
      font-size: 8px;
      font-weight: 300;
    }
    .mobile {
      display: initial;
    }
    .single {
      color: var(--red);
    }
    .tekstboks {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin-bottom: 10px;
      margin-right: 10px;
    }
  }

  /* Desktop view */
  @media (min-width: 800px) {
    h3 {
      margin-top: 22px;
      margin-left: 18px;
      font-size: 23px;
      font-weight: 600;
    }
    p {
      /* margin-top: 18px; */
      margin-left: 18px;
      font-size: 14px;
      line-height: 20px;
    }
    .menu-column {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
      background-image: url("../img/paper.webp");
      background-size: cover;
      height: 180px;
      gap: 10px;
      max-width: 700px;
      border-radius: 2px;
    }
    .tilbehor {
      margin-top: 3px;
      margin-left: 30px;
      font-size: 13px;
      font-weight: 300;
    }
    .mobile {
      display: none;
    }
    .single {
      color: var(--red);
      /* margin-top: 30px; */
      margin-right: 18px;
      font-size: 15px;
    }
      .tekstboks {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin-bottom: 10px;
      margin-right: 10px;
    }
  }
</style>
